{
  "manifest_version": 3,
  "name": "Proxy Switcher",
  "version": "1.0",
  "description": "Chrome extension for easier changing of proxy servers",
  "permissions": [
    "proxy",
    "webRequest",
    "webRequestBlocking"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
